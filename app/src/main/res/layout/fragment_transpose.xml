<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transpose.TransposeFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <EditText
        android:id="@+id/note4"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:autofillHints="G"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="G"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note3"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="288dp"
        android:autofillHints="F"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="F"
        app:layout_constraintEnd_toStartOf="@+id/note4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note2"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="288dp"
        android:autofillHints="Am"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Am"
        app:layout_constraintEnd_toStartOf="@+id/note3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note1"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="288dp"
        android:autofillHints="C"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="C"
        app:layout_constraintEnd_toStartOf="@+id/note2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/transposePitch"
        android:layout_width="41dp"
        android:layout_height="47dp"
        android:layout_marginTop="376dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transposeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="455dp"
        android:text="@string/transpose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transposeInfo"
        android:layout_width="179dp"
        android:layout_height="31dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="392dp"
        android:text="@string/pitch_to_transpose_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transposednotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/transposednotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transposeBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>